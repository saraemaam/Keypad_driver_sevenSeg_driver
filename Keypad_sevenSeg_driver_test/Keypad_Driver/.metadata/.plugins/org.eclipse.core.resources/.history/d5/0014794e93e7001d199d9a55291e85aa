#ifndef KEYPAD_H_
#define KEYPAD_H_

#include"std_types.h"

/*********************************************************************
 *                       Definitions
 *********************************************************************/

/*you can change this to use another keypad 4*3 */

#define KEYPAD_NUM_ROWS         4
#define KEYPAD_NUM_COLS         4

/* Keypad Port Configurations */

#define KEYPAD_ROW_PORT_ID      PORTA_ID
#define KEYPAD_COL_PORT_ID      PORTA_ID
#define KEYPAD_FIRST_COL_PIN_ID PIN0_ID
#define	KEYPAD_FIRST_ROW_PIN_ID PIN4_ID

/* Keypad button logic configurations */

#define KEYPAD_PRESSED  LOGIC_LOW
#define KEYPAD_RELEASED LOGIC_HIGH

/*******************************************************************
 *              Function Prototypes
 * ***************************************************************/

/*
 * Function get the pressed key from the user and
 * returns number of the pressed button.
 */

uint8 KEYPAD_getPressedKey(void);








